{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

<div class="d-flex justify-content-center align-items-center" style="margin-top:2%;">
    <div class="text-center p-4" style="box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);">
        <h1>Contact</h1>
        {{ form_start(form) }}
        <div class="row">
            <div class="col">
                <div class="form-group">
                    {{ form_label(form.Contact_nom, 'Nom', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.Contact_nom, {'attr': {'class': 'form-control custom-color', }}) }}
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    {{ form_label(form.Contact_email, 'Email', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.Contact_email, {'attr': {'class': 'form-control custom-color'}}) }}
                </div>
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.Contact_sujet, 'Sujet', {'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form.Contact_sujet, {'attr': {'class': 'form-control custom-color', }}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.Contact_message, 'Message', {'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form.Contact_message, {'attr': {'class': 'form-control custom-color','rows': 5}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.Envoyer, {'attr': {'class': 'btn custom-button'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
</div>  
<style>
.custom-button {
    background-color: #1EC11B;
    color: white;
}
.custom-color {
    border-color: rgba(0, 0, 0, 0.4);; 
}


</style>
{% endblock %}
