{% extends 'base.html.twig' %}

{% block title %} {{ Realisation.RealisationNom }} {% endblock %}
{% block body %}
<section class="section blog-single">
	<div class="container">
		<div class="row">
			<div class="col-md-10 m-auto">
				
				<article class="single-post">
				
					<div class="post-title text-center">
						<h1> {{Realisation.RealisationNom}} </h1>
					</div>
					
					<div class="post-body">
						
						<div class="feature-image d-flex justify-content-center align-items-center">
							<img class="img-fluid w-50 h-50"  src="/uploads/image/{{Realisation.RealisationPhoto}}" style="height:500px; object-fit: cover;" alt="feature-image">
						</div>
						
						<p> {{Realisation.RealisationContenu}} </p>
						
					</div>
				</article>
	        		<div class="image-gallery ">
	
						{% for media in medias %}
    						{% for image in images[media.getId()] %}
    						    <img data-aos="flip-right" data-aos-duration="3000" class="img-fluid w-25" src="{{ '/uploads/image/' ~ image.getNom() }}"  alt="{{ media.getDescription() }}" />
    						{% endfor %}
						{% endfor %}

					</div>
			</div>
		</div>
	</div>
</section>
   
{% endblock %}